# =============================================================================
# Massage Bot - Environment Variables
# =============================================================================
# Скопіюйте цей файл у .env та заповніть реальними значеннями
# =============================================================================

# -----------------------------------------------------------------------------
# Database (Supabase PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://postgres:your-password@your-host.supabase.co:5432/postgres?schema=public"

# -----------------------------------------------------------------------------
# Redis (Upstash або Railway Redis)
# -----------------------------------------------------------------------------
REDIS_URL="redis://default:your-redis-password@your-upstash-host.upstash.io:6379"

# -----------------------------------------------------------------------------
# Telegram Bot
# -----------------------------------------------------------------------------
BOT_TOKEN="1234567890:ABCdefGHIjklMNOpqrsTUVwxyz"
# URL вашого Telegram Mini App (Vercel)
WEBAPP_URL="https://your-app.vercel.app"
# URL для webhook ( Railway/Render)
BOT_WEBHOOK_URL="https://your-api.railway.app"

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-long"
JWT_EXPIRES_IN="7d"

# -----------------------------------------------------------------------------
# Portmone Payment (Ukraine)
# -----------------------------------------------------------------------------
PORTMONE_PAYEE_ID="your-portmone-payee-id"
PORTMONE_LOGIN="your-portmone-login"
PORTMONE_PASSWORD="your-portmone-password"
PORTMONE_GATEWAY_URL="https://www.portmone.com.ua/gateway/"

# -----------------------------------------------------------------------------
# Google Calendar (Optional)
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="https://your-api.railway.app/api/master/calendar/callback"

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
PORT=3000
NODE_ENV="production"
# Vercel URL для frontend
CORS_ORIGIN="https://your-app.vercel.app"
